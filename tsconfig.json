{
  "compilerOptions": {
    "module": "es2020",
    "target": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
